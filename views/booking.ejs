<%- include('partials/page-open.ejs') %>
<!-- Header -->
<header>
  <nav class="main-nav">
    <h1 class="logo">
      <a href="/">sound<span class="text-primary">WAV</span> Studios</a>
    </h1>
    <ul>
      <li><a href="/users/login">Sign In</a></li>
      <li>|</li>
      <li><a href="/users/signup">Sign up</a></li>
    </ul>
  </nav>
</header>

<div class="container">
  <form>
    <div>
      <label for="date">Select a date for your booking:</label>
      <input
        type="date"
        placeholder="Enter Date"
        class="u-full-width"
        id="date"
        required
      />
    </div>

    <div>
      <label for="start-time">Session start time:</label>
      <input type="time" class="u-full-width" id="start-time" required />
    </div>
    <div>
      <label for="end-time">Session end time:</label>
      <input type="time" class="u-full-width" id="end-time" required />
    </div>

    <button class="btn-booking u-full-width my-3">
      <a href="/confirmation">Submit Booking</a>
    </button>
  </form>
</div>
<%- include('partials/page-end.ejs') %>
