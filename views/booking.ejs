<%- include('partials/page-open.ejs') %>
<!-- Header -->
<header>
  <nav class="main-nav">
    <h1 class="logo">
      <a href="/">sound<span class="text-primary">WAV</span> Studios</a>
    </h1>
    <ul>
      <% if (currentUser !== null) { %>
        <li><a href="/users/logout">Sign Out</a></li>
    </ul>
  </nav>
</header>

<div class="container">
  <h1><%= fac.name %></h1>
  <h3>Price: <%= fac.cost %></h3>
  <form action="/bookings/<%= fac.id %>" method="POST">
    <div>
      <label for="date">Select a date for your booking:</label>
      <input
        type="date"
        name="date"
        placeholder="Enter Date"
        class="u-full-width"
        id="date"
        required
      />
    </div>

    <div>
      <label for="start-time">Session start time:</label>
      <input
        type="time"
        name="starttime"
        class="u-full-width"
        id="start-time"
        required
      />
    </div>
    <div>
      <label for="end-time">Session end time:</label>
      <input
        type="time"
        name="endtime"
        class="u-full-width"
        id="end-time"
        required
      />
    </div>
    <button class="btn-booking u-full-width my-3" type="submit">
      Submit Booking
    </button>
  </form>
</div>
<%- include('partials/page-end.ejs') %>
