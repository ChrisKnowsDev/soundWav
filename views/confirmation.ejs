<%- include('partials/page-open.ejs') %>
<!-- Header -->
<header>
  <nav class="main-nav">
    <h1 class="logo">
      <a href="/">sound<span class="text-primary">WAV</span> Studios</a>
    </h1>
    <ul>
      <% if (currentUser !== undefined) { %>
      <li><a href="/users/logout">Sign Out</a></li>
      <%} else { %>
      <li><a href="/users/login">Sign In</a></li>
      <li>|</li>
      <li><a href="/users/signup">Sign up</a></li>
      <% } %>
    </ul>
  </nav>
</header>

<div class="confirmation-message container">
  <p>
    Thanks for booking you session with soundWAV studios. We'll see you on
    <span class="booking-date"><%= booking.date %></span> at
    <span class="booking-time"><%= booking.starttime %></span> until
    <span class="booking-time"><%= booking.endtime %></span>
  </p>
</div>
<%- include('partials/page-end.ejs') %>